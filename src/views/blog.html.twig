{% extends "layout.html.twig" %}

{% block title %} Blog - Assane Thione Ba {% endblock %}


{% block Content %}

    <header class="masthead bg-primary text-white text-center" id="moving-background">
        <div class="container d-flex align-items-center flex-column">

            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0"> Mon blog </h1>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Masthead Subheading -->
            <p class="masthead-subheading font-weight-light mb-0">Ici je partage avec vous des trucs et astuces, des tutos,
                des hacks supers et même mon point de vue sur des sujets liés ou non à l'informatique.
            </p>
            <div class="divider-custom divider-light">
            </div>
    </header>
    <section class="page-section">
        <div class="container">
            <div class="row">
                <div class="card-columns">

                    {% for post in posts %}
                        <div class="card mb-5">
                                <img src="../public/img/mon-avatar.png" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">{{ post.title }}</h5>
                                    <p class="card-text"> {{ post.lead }}</p>
                                </div>
                                <div class="text-center">
                                    <a href="../blog/article/{{ post.idpost }}" class="btn btn-primary btn-block">Voir l'article</a>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">Dernière modification {{ post.date_creation|date("d/m/Y") }}</small>
                                </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </section>

{% endblock %}